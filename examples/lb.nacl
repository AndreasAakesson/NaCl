Iface outside {
    address: 10.20.17.71,
    netmask: 255.255.255.0,
    gateway: 10.20.17.1,
    index: 0 # 1 if uplink
}

Iface inside {
    address: 10.20.17.72,
    netmask: 255.255.255.0,
    gateway: 10.20.17.1,
    index: 1 # 2 if uplink
}

Load_balancer lb {
    layer: tcp,
    clients: {
        iface: outside,
        port: 80,
        wait_queue_limit: 900,
        session_limit: 500
    },
    servers: {
        iface: inside,
        algorithm: round_robin,
        pool: [
            {
                address: 10.20.17.81,
                port: 80
            },
            {
                address: 10.20.17.82,
                port: 80
            }
        ]
    }
}